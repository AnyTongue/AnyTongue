@using AnyTongue.Web.Client.Components
@using AnyTongue.Web.Client.Layout

@inherits EmptyLayout

<AppMudThemeProvider />
<AppMudProviders />

<MudLayout>
  <MudAppBar Elevation="0">
    <MudText Typo="Typo.h6">AnyTongue</MudText>
    <MudSpacer />
    <PublicLoginDisplay />
  </MudAppBar>
  <MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pa-16">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

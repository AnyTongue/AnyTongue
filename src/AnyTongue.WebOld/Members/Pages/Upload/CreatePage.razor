@page "/content/upload/create"

<PageTitle>Create content</PageTitle>

<MudText Typo="Typo.h4">Create content</MudText>

<MudForm @ref="_form" @bind-IsValid="@_isValid" @bind-Errors="@_errors" Class="gap-4">
  <MudSelect @bind-Value="@_country" Label="With render fragements" Variant="Variant.Outlined">
    <MudSelectItem Value="@("Germany")">
      <img src="https://upload.wikimedia.org/wikipedia/commons/b/ba/Flag_of_Germany.svg" height="14" class="mr-1" /> Germany
    </MudSelectItem>
    <MudSelectItem Value="@("Kyrgyzstan")">
      <img src="https://upload.wikimedia.org/wikipedia/commons/c/c7/Flag_of_Kyrgyzstan.svg" height="14" class="mr-1" /> Kyrgyzstan
    </MudSelectItem>
    <MudSelectItem Value="@("English")">
      <img src="https://upload.wikimedia.org/wikipedia/commons/a/ae/Flag_of_the_United_Kingdom.svg" height="14" class="mr-1" /> English
    </MudSelectItem>
  </MudSelect>
  <MudTextField T="string" Label="Text" Lines="15" Required="true" RequiredError="Input text is required!" />

  <div class="d-flex align-center justify-space-between">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!_isValid)" Class="ml-auto">Register</MudButton>
  </div>
</MudForm>

@code {
  bool _isValid;
  string[] _errors = { };
  MudTextField<string> pwField1;
  MudForm? _form;
  string _country = "Germany";
}
